<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ActivityBudgetDetails">

	<com.google.android.material.button.MaterialButton
			android:text="Add New Payment"
			android:layout_width="wrap_content"
			android:layout_height="40dp" android:id="@+id/btnNewPayment"
			app:layout_constraintEnd_toEndOf="@+id/txtBudgetDetails"
			app:layout_constraintStart_toStartOf="@+id/txtBudgetDetails"
			app:layout_constraintTop_toBottomOf="@+id/txtBudgetDetails" android:layout_marginTop="40dp"
			android:fontFamily="@font/architects_daughter"/>
	<TextView
			android:text="Budget name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/txtBudgetDetails"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp" android:textSize="24sp"
			android:textStyle="bold"/>
	<TextView
			android:text="TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/txtBudgetId"
			app:layout_constraintStart_toEndOf="@+id/textView3" app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="15dp" android:layout_marginStart="3dp"/>
	<TextView
			android:text="ID: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView3"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="15dp" android:layout_marginStart="15dp"/>
	<TextView
			android:text="Member"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView4"
			app:layout_constraintEnd_toStartOf="@+id/guideline2" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="70dp"
			android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/txtBudgetDetails"
			android:layout_marginTop="100dp" android:textStyle="bold"/>
	<TextView
			android:text="Balance"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView5"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline2"
			android:layout_marginEnd="100dp"
			android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/txtBudgetDetails"
			android:layout_marginTop="100dp" android:textStyle="bold"/>
	<androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
	                                            android:id="@+id/guideline2" app:layout_constraintGuide_begin="230dp"
	                                            android:orientation="vertical"/>
	<TextView
			android:text="Aksel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/txtMemberName"
			app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/textView4"
			app:layout_constraintEnd_toEndOf="@+id/textView4" android:textSize="16sp"/>
	<TextView
			android:text="0 kr"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/txtMemberBalance"
			app:layout_constraintTop_toBottomOf="@+id/textView5"
			app:layout_constraintStart_toStartOf="@+id/guideline4" android:textSize="16sp"/>
	<androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
	                                            android:id="@+id/guideline4" app:layout_constraintGuide_begin="255dp"
	                                            android:orientation="vertical"/>
	<TextView
			android:text="All Payments"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView10"
			android:textSize="20sp" android:textStyle="bold"
			app:layout_constraintTop_toBottomOf="@+id/txtMemberName" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"/><![CDATA[

	/>

]]>
</androidx.constraintlayout.widget.ConstraintLayout>